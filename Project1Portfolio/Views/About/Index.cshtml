@model List<Project1Portfolio.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Hakkımda Listesi ve İşlemleri</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sol Başlık</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title</td>
            <td>@item.Detail</td>
            <td>@item.LeftTitle</td>
            <td><img src="@item.ImageUrl" alt="Görsel" style="width: 100px; height: auto;" /></td>
            <td><a href="/About/DeleteAbout/@item.AboutId/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId/" class="btn btn-outline-success">Güncelle</a></td>
            @if (item.Status == false)
            {
                <td><a href="/About/ChangeAboutStatusToTrue/@item.AboutId" class="btn btn-outline-success">Aktif Et</a></td>
            }
            else
            {
                <td><a href="/About/ChangeAboutStatusToFalse/@item.AboutId" class="btn btn-outline-warning">Deaktif Et</a></td>
            }
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-outline-info">Yeni Hakkımda Bilgileri Ekle</a>

