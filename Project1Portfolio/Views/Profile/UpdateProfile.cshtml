@model Project1Portfolio.Models.Profile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Profil Güncelleme Sayfası</h2>

@using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ProfileId)
    <div class="form-group">
        <label>Açıklama/Ad Soyad</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Adres</label>
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>E-Mail</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Telefon</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>GitHub</label>
        @Html.TextBoxFor(x => x.Github, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn btn-outline-info">Güncelle</button>
    </div>
}

